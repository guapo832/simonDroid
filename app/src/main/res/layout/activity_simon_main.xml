<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:weightSum="1"
    android:background="#ffffff">

    <TextView
      android:id="@+id/highscore_text_view"
      android:layout_width="170dp"
      android:layout_height="wrap_content"
      android:padding="24dp"
      android:textSize="@android:dimen/app_icon_size"
      android:gravity="center"
      android:singleLine="false"
        android:layout_gravity="center_horizontal" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07"
        android:id="@+id/rdoDifficulty">

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Difficulty_Easy"
        android:id="@+id/rdoDifficulty_Easy"
        android:layout_weight="0.07"
        android:checked="true"/>

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdoDifficulty_Medium"
        android:text="@string/Difficulty_Medium"
         />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdoDifficulty_Hard"
            android:layout_weight="0.07"
            android:text="@string/Difficulty_Hard"
            />
    </RadioGroup>



    <Button
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.16"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"
        android:background="#a40328fb"
        android:textColor="#ffffff"
        android:onClick="startGame_OnClick"/>

</LinearLayout>